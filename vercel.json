{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.13",
        "wsgi": "api.index:app"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api" 
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
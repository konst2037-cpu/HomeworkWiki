{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.13",
        "wsgi": "api.main:app"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api" 
    },
    {
      "src": "/(.*)",
      "dest": "src/$1"
    }
  ],
  "functions": {
    "api/main.py": {
      "maxDuration": 60
    }
  }
}